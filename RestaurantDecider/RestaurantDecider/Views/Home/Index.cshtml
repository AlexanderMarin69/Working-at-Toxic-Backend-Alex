@{
    ViewData["Title"] = "Home Page";
}

<a class="btn btn-primary" asp-controller="Home" asp-action="Restaurant">Get random restaurant 🍕</a>


<h3 class="mt-5">
    Add new Restaurant 🍕
</h3>

<form class="mt-3" asp-controller="Home" asp-action="Add">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" id="name" aria-describedby="name" placeholder="Enter name">
    </div>

    <div class="form-group">
        <label for="food">Food</label>
        <input type="text" class="form-control" name="food" id="food" aria-describedby="food" placeholder="Enter food">
    </div>

    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" name="address" id="address" aria-describedby="address" placeholder="Enter address">
    </div>


    <div class="form-group">
        <label for="openHour">Opening hour</label>
        <input type="time" class="form-control" name="openHour" id="openHour" aria-describedby="openHour" placeholder="Enter opening hour">
    </div>
    <div class="form-group">
        <label for="closingHour">Closing hour</label>
        <input type="time" class="form-control" name="closeHour" id="closingHour" aria-describedby="closingHour" placeholder="Enter closing hour">
    </div>

    
    <button type="submit" class="btn btn-primary">Add</button>
</form>